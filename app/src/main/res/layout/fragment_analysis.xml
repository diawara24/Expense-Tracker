<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TabFragments.Analysis"
    android:background="@color/background">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="64px"
                android:layout_marginVertical="64px"
                android:orientation="horizontal"
                android:padding="20px"
                android:weightSum="1.0">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/balanceTextView"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Balance"
                    android:textColor="@color/black"
                    android:textSize="32sp"
                    style="@style/Casual"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/balanceNumberView"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@color/colorPrimary"
                    android:text="0"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    style="@style/Casual"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:orientation="vertical"
                android:layout_margin="30dp"
                android:background="@drawable/chartbackground">

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChart"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    style="@style/Casual"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:orientation="vertical"
                android:layout_margin="30dp"
                android:background="@drawable/chartbackground">

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChart1"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    style="@style/Casual"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:orientation="vertical"
                android:layout_margin="30dp"
                android:background="@drawable/chartbackground">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/piechar"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    style="@style/Casual"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:orientation="vertical"
                android:layout_margin="30dp"
                android:background="@drawable/chartbackground">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/piechar1"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    style="@style/Casual"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>